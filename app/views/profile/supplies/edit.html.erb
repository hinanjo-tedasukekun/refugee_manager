<% provide(:title, '必需品') %>
<ol class="breadcrumb">
  <li><%= link_to 'ホーム', root_path %></li>
  <li><%= link_to '個人情報', profile_path %></li>
  <li class="active">必需品</li>
</ol>
<%= render 'shared/flash' %>
<h1>必需品</h1>
<%= form_for(@refugee, url: profile_supplies_path) do |f| %>
  <%= render 'shared/error_messages', target: @refugee %>
  <p>以下のうち、必要なものにチェックを入れてください。</p>
  <%= f.collection_check_boxes :supply_ids, Supply.all, :id, :name do |b| %>
    <div class="checkbox">
      <%= b.label { b.check_box + ' ' + b.text } %>
    </div>
  <% end %>
  <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
<% end %>
