<% provide(:title, '個人情報') %>
<div class="row">
  <div class="col-xs-12">
    <h1>個人情報</h1>

    <table class="table table-striped">
      <tbody>
        <tr>
          <th>番号</th>
          <td id="refugee_num"><%= @refugee.barcode.code %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td id="refugee_name"><%= @refugee.name %></td>
        </tr>
        <tr>
          <th>ふりがな</th>
          <td id="refugee_furigana"><%= @refugee.furigana %></td>
        </tr>
        <tr>
          <% if @leader.name.empty? %>
            <th>世帯代表者の番号</th>
            <td id="leader_num"><%= @leader.barcode.code %></td>
          <% else %>
            <th>世帯代表者</th>
            <td id="leader_name"><%= @leader.name %></td>
          <% end %>
        </tr>
      </tbody>
    </table>

    <p><%# link_to(fa_icon('pencil', text: '修正'), edit_refugee_path, class: 'btn btn-success btn-block') %></p>
  </div>
</div>
