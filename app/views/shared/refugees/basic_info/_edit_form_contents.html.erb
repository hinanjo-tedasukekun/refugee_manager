<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :furigana %>
  <%= f.text_field :furigana, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :gender %>
  <%= f.select :gender, Refugee.genders_i18n.invert, {}, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :age %>
  <%= f.number_field :age, class: 'form-control', min: 0 %>
</div>
<%= f.submit '更新', class: 'btn btn-primary form-control' %>
